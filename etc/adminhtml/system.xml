<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
<!--Configuration settings.-->
    <system>
        <tab id="neosoft" translate="label" sortOrder="10">
            <label>Neo</label>
        </tab>
        <section id="robotsmetatag" translate="label" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Neosoft Robots Meta Tag settings</label>
            <tab>neosoft</tab>
            <resource>Neo_RobotsMetaTag::robotsmetatag</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>General Configuration</label>
                <field id="cat_metaoption" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Category Robots Meta Options</label>
                    <source_model>Neo\RobotsMetaTag\Model\Config\Source\CategoryMetaOptions</source_model>
                    <can_be_empty>1</can_be_empty>
                    <comment>The selected options will appear on admin category page.</comment>
                </field>
                <field id="pro_metaoption" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Product Robots Meta Options</label>
                    <source_model>Neo\RobotsMetaTag\Model\Config\Source\ProductMetaOptions</source_model>
                    <can_be_empty>1</can_be_empty>
                    <comment>The selected options will appear on admin product page.</comment>
                </field>
            </group>
        </section>
    </system>
</config>
